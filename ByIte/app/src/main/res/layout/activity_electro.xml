<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="45dp"
    android:paddingRight="45dp"
    android:paddingTop="40dp"
    android:background="@drawable/mob">

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/f1"
        android:background="@drawable/roundbt"
        android:src="@drawable/cell"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:text="Mobiles"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/f1"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="24dp"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/f2"
        android:background="@drawable/roundbt"
        android:layout_alignParentRight="true"
        android:src="@drawable/head"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:layout_marginRight="10dp"
        android:text="Mobile Access"
        android:textAlignment="center"
        android:layout_below="@+id/f2"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/f3"
        android:background="@drawable/roundbt"
        android:layout_below="@+id/tv1"
        android:layout_alignParentLeft="true"
        android:src="@drawable/comp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:layout_marginLeft="28dp"
        android:id="@+id/tv3"
        android:text="Laptops"
        android:textAlignment="center"
        android:layout_below="@+id/f3"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="50dp"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/f4"
        android:background="@drawable/roundbt"
        android:layout_below="@+id/tv2"
        android:layout_alignParentRight="true"
        android:src="@drawable/mouse"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:layout_marginRight="12dp"
        android:id="@+id/tv4"
        android:text="C/L Access"
        android:textAlignment="center"
        android:layout_below="@+id/f4"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>