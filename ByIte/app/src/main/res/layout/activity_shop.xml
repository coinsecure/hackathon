<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="45dp"
    android:paddingRight="45dp"
    android:paddingTop="40dp"
    android:background="@drawable/def">

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/ib4"
        android:background="@drawable/roundbt"
        android:src="@drawable/shoes" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:text="Footwear"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/ib4"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="24dp"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/ib5"
        android:background="@drawable/roundbt"
        android:layout_alignParentRight="true"
        android:src="@drawable/book"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:layout_marginRight="29dp"
        android:text="Books"
        android:textAlignment="center"
        android:layout_below="@+id/ib5"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/ib6"
        android:background="@drawable/roundbt"
        android:layout_below="@+id/tv1"
        android:layout_alignParentLeft="true"
        android:src="@drawable/elec"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:layout_marginLeft="13dp"
        android:id="@+id/tv3"
        android:text="Electronics"
        android:textAlignment="center"
        android:layout_below="@+id/ib6"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="40dp"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/ib7"
        android:background="@drawable/roundbt"
        android:layout_below="@+id/tv2"
        android:layout_alignParentRight="true"
        android:src="@drawable/coat"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:layout_marginRight="20dp"
        android:id="@+id/tv4"
        android:text="Apparels"
        android:textAlignment="center"
        android:layout_below="@+id/ib7"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/ib8"
        android:background="@drawable/roundbt"
        android:layout_below="@+id/tv3"
        android:layout_alignParentLeft="true"
        android:src="@drawable/set"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:layout_marginLeft="13dp"
        android:id="@+id/tv5"
        android:text="Accessories"
        android:textAlignment="center"
        android:layout_below="@+id/ib8"
        android:layout_alignParentLeft="true"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/ib9"
        android:background="@drawable/roundbt"
        android:layout_below="@+id/tv4"
        android:layout_alignParentRight="true"
        android:src="@drawable/sports"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:layout_marginRight="28dp"
        android:id="@+id/tv6"
        android:text="Sports"
        android:textAlignment="center"
        android:layout_below="@+id/ib9"
        android:layout_alignParentRight="true"/>



</RelativeLayout>