<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="45dp"
    android:paddingRight="45dp"
    android:paddingTop="40dp"
    android:background="@drawable/bo">

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/b1"
        android:background="@drawable/roundbt"
        android:src="@drawable/bible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:text="Mythological"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/b1"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="16dp"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/b2"
        android:background="@drawable/roundbt"
        android:layout_alignParentRight="true"
        android:src="@drawable/star"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:layout_marginRight="10dp"
        android:text="Bestsellers"
        android:textAlignment="center"
        android:layout_below="@+id/b2"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/b3"
        android:background="@drawable/roundbt"
        android:layout_below="@+id/tv1"
        android:layout_alignParentLeft="true"
        android:src="@drawable/book2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:layout_marginLeft="2dp"
        android:id="@+id/tv3"
        android:text="Entrance Exams"
        android:textAlignment="center"
        android:layout_below="@+id/b3"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="50dp"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/b4"
        android:background="@drawable/roundbt"
        android:layout_below="@+id/tv2"
        android:layout_alignParentRight="true"
        android:src="@drawable/bio"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:layout_marginRight="8dp"
        android:id="@+id/tv4"
        android:text="Biographies"
        android:textAlignment="center"
        android:layout_below="@+id/b4"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>
